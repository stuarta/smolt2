<div class="flex items-center gap">
  <%= link_to "/", class: "flex items-center gap mie-2" do %>
    <%= image_tag("mythtv.png") %>
  <% end %>
  <span class="font-bold">MythTV Hardware Profiles</span>
</div>
<% if current_user %>
  <div>Welcome, <%= current_user[:name] || current_user[:nickname] %></div>
<% end %>
<div class="flex items-center gap">
  <% if current_user %>
    <div contents data-controller="popover" data-action="mouseenter->popover#debouncedShow mouseleave->popover#debouncedHide">
      <%= button_to logout_path, class: "btn avatar", method: :delete, data: { turbo: false, popover_target: "trigger" } do %>
        <%= image_tag "log-out.svg", size: 48, alt: "Logout" %>
      <% end %>
      <div popover="hint" class="popover bg-black text-reversed text-xs pb-1 pi-2" data-popover-target="content" role="tooltip">
        Logout
      </div>
    </div>
  <% else %>
    <div contents data-controller="popover" data-action="mouseenter->popover#debouncedShow mouseleave->popover#debouncedHide">
      <%= button_to "/auth/openid_connect", class: "btn avatar", data: { turbo: false, popover_target: "trigger" } do %>
        <%= image_tag "log-in.svg", size: 48, alt: "Login" %>
      <% end %>
      <div popover="hint" class="popover bg-black text-reversed text-xs pb-1 pi-2" data-popover-target="content" role="tooltip">
        Login
      </div>
    </div>
  <% end %>
</div>